<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="TESTAPP.ShellPage2"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Shell.NavBarIsVisible="False">

    <VerticalStackLayout Padding="40" Spacing="10">

        <Label
            FontAttributes="Bold"
            FontSize="30"
            Text="Shell Page 2" />

        <Label
            FontSize="16"
            Text="When this button is clicked, the Shell.FlyoutBehavior should be set to match the configuration on ShellPage1 (disabled). This ensures the shell navigation on the left is hidden when navigating back to ShellPage1. While this functionality worked seamlessly in .NET 8—and technically still does in .NET 9—registering these pages as singletons introduces an issue in .NET 9."
            TextColor="DarkRed" />

        <Button Clicked="Button_Clicked" Text="Go Back To Shell Page 1" />

    </VerticalStackLayout>

</ContentPage>
