<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ApplicationQuitError.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ApplicationQuitError"
    Title="ApplicationQuitError"
    Background="Green"
    BackgroundColor="Green"
    FlyoutBackdrop="Green"
    FlyoutBackground="Green"
    FlyoutBackgroundColor="Green"
    FlyoutWidth="200"
    Shell.FlyoutBehavior="Locked"
    Shell.TabBarIsVisible="False">

    <Shell.FlyoutHeader>
        <VerticalStackLayout BackgroundColor="Red">
            <Label Text="test" />
        </VerticalStackLayout>
    </Shell.FlyoutHeader>

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

</Shell>
